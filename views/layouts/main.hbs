<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Bookshop</title>
  <base href="/">    
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="icon" type="image/x-icon" href="favicon.ico">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body class="mat-typography">
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Bookshop</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active"><a href="/" class="nav-link">Home</a></li>
          <li class="nav-item active"><a href="/contacts" class="nav-link" routerLink="/contacts">Contact us</a></li>
          {{#if user.isAdmin}}
          <li class="nav-item active"><a href="/category/create" class="nav-link">Add new category</a></li>
          <li class="nav-item active"><a href="/authors/create" class="nav-link">Add new author</a></li>
          <li class="nav-item active"><a href="/books/create" class="nav-link">Add new book</a></li>
          {{/if}}
          {{#if isLoggedIn}}
          <li class="nav-item active"><a href="/books/list" class="nav-link">All books</a></li>
          <li class="nav-item active"><a href="/auth/logout" class="nav-link">Logout</a></li>
          {{else}}
          <li class="nav-item active"><a href="/auth/login" class="nav-link">Login</a></li>
          <li class="nav-item active"><a href="/auth/register" class="nav-link">Register</a></li>
          {{/if}}
        </ul>
      </div>
    </nav>
  </header>
  <div class="container">
        <main role="main" class="pb-3">
            {{{body}}}
        </main>
  </div>
