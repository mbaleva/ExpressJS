<form method="post" class="col-md-6 offset-md-3">
    <h1>Edit book</h1>
    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" name="name" type="text" value="{{name}}"/>
    </div>
    <div class="form-group">
        <label for="language">Language</label>
        <input class="form-control" name="language" type="text" value="{{language}}"/>
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input class="form-control" name="price" type="text" value="{{price}}"/>
    </div>
    <div class="form-group">
        <label for="imageUrl">Image URL</label>
        <input class="form-control" name="imageUrl" type="text" value="{{imageUrl}}"/>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" name="description" rows="10">{{description}}</textarea>
    </div>
    <button class="btn btn-info" type="submit">Submit</button>
</form>